<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.d.lib.common.view.TitleLayout
        style="@style/lib_pub_title_style"
        app:lib_pub_tl_middleText="DeviceFeature" />

    <Button
        android:id="@+id/btn_text_to_speech"
        style="@style/lib_pub_btn_style"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/lib_pub_dimen_margin"
        android:layout_marginTop="@dimen/lib_pub_dimen_margin"
        android:layout_marginRight="@dimen/lib_pub_dimen_margin"
        android:text="Text to speech" />

    <Button
        android:id="@+id/btn_motion_detection"
        style="@style/lib_pub_btn_style"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/lib_pub_dimen_margin"
        android:layout_marginTop="@dimen/lib_pub_dimen_margin"
        android:layout_marginRight="@dimen/lib_pub_dimen_margin"
        android:text="Motion Detection" />

    <Button
        android:id="@+id/btn_nfc"
        style="@style/lib_pub_btn_style"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/lib_pub_dimen_margin"
        android:layout_marginTop="@dimen/lib_pub_dimen_margin"
        android:layout_marginRight="@dimen/lib_pub_dimen_margin"
        android:text="NFC" />
</LinearLayout>
